<h1 align=center>รายชื่อบริษัท</h1>

<table width=100%>
  <thead>
    <tr>
      <th align=left>บริษัท</th>
      <th>ผู้ติดต่อ</th>
      <th>หมายเลขโทรศัพท์</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= supplier.contact_name %></td>
        <td align=center><%= supplier.contact_number %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

